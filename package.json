{
  "name": "thinkread-electron",
  "version": "1.4.0",
  "description": "ThinkRead - Standalone eBook Reader for Mac",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "cd web && npm run build",
    "build:electron": "electron-builder --mac",
    "build:electron:all": "electron-builder --mac --win --linux",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.thinkread.app",
    "productName": "ThinkRead",
    "mac": {
      "category": "public.app-category.books",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "electron/**/*",
      "web/dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "epub": "^1.3.0",
    "nanoid": "^5.0.7",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  }
}

