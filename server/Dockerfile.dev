FROM node:20-slim

WORKDIR /app

# Install Calibre for MOBI to EPUB conversion and espeak-ng for TTS
RUN apt-get update && \
    apt-get install -y --no-install-recommends calibre espeak-ng && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install nodemon globally for auto-reload
RUN npm install -g nodemon

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source (will be overridden by volume mount, but needed for initial setup)
COPY . .

# Expose port
EXPOSE 8080

# Run with nodemon for auto-reload on file changes
CMD ["nodemon", "server.js"]

